<% if @task.errors.any? %>
    <ul>
      <% @task.errors.full_messages.each do |error_msg| %>
          <li><%= error_msg %></li>
      <% end %>
    </ul>
<% end %>

<%= form_for [@user, @task] do |f| %>
    <div>
      <%= f.label :title %>
      <br/>
      <%= f.text_field :title, autofocus: true %>
    </div>
    <div>
      <%= f.label :description %>
      <br/>
      <%= f.text_area :description %>
    </div>
    <div>
      <%= f.label :image %>
      <br/>
      <%= image_tag @task.image %>
      <br/>
      Upload/Update
      <%= f.file_field :image %>
    </div>
    <div>
      <%= f.hidden_field :assigned_to, value: @user.id %>
      <%= f.hidden_field :created_by, value: current_user.id %>
      <%= f.submit "Submit", class: "button" %>
    </div>
<% end %>